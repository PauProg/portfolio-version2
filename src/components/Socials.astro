---
import type { ImageMetadata } from "astro";

interface props {
    desktopImgUrl: string | ImageMetadata;
    alt: string;
}

const { src, alt, title, anchor, color } = Astro.props;
---

<a href={anchor} class="flex content-center lg:text-[20px] sm:text-[17px] items-center gap-2 border-2 border-gray-700 hover:border-gray-500 px-3 py-4 rounded-lg transition-all duration-[.5s]" style={`color: ${color}`}>
    <img src={ src.src } alt={ alt } class="w-[24px] h-[24px]">
    <h3>{ title }</h3>
</a>