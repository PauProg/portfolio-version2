---
import type { ImageMetadata } from "astro";

interface props {
    desktopImgUrl: string | ImageMetadata;
    alt: string;
}

const { src, title, alt, anchor, description, iconOne, iconTwo, iconThree } = Astro.props;
---

<a
    href={anchor}
    class="relative w-[95%] flex justify-left gap-7 items-center px-5 py-3 border-2 rounded-xl border-gray-600 hover:border-gray-400 transition-all duration-500"
    target="_blank"
>
    <img src={src.src} alt={alt} class="w-2/5 rounded-lg" />
    <div class="mr-4">
        <h3 class="font-bold text-3xl mb-4">{title}</h3>
        <p class="text-lg text-pretty">{description}</p>
        <div class="flex gap-3 mt-3">
            <img src={iconOne.src} alt="icon1">
            <img src={iconTwo.src} alt="icon1">
            <img src={iconThree.src} alt="icon1">
        </div>
    </div>
    <svg
        width="34"
        height="34"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="absolute top-[10px] right-[10px] opacity-0 transition-opacity duration-500"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M17 7l-10 10"></path><path d="M8 7l9 0l0 9"></path></svg
    >
</a>

<style>
    a:hover svg.absolute{
        opacity: 1;
    }
</style>
